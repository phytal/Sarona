<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.Sarona.DayNight" parent="Theme.Sarona.Dark"/>

    <style name="Theme.Sarona.Dark" parent="Theme.Sarona">
        <!--Color-->
        <item name="colorPrimary">@color/sarona_blue_200</item>
        <item name="colorPrimaryVariant">@color/sarona_blue_300</item>
        <item name="colorSecondary">@color/sarona_orange_300</item>
        <item name="colorSecondaryVariant">@color/sarona_orange_300</item>

        <item name="android:colorBackground">@color/sarona_black_800</item>
        <item name="colorSurface">@color/sarona_black_800</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorError">@color/sarona_red_200</item>

        <item name="colorOnPrimary">@color/sarona_black_900</item>
        <item name="colorOnSecondary">@color/sarona_black_900</item>
        <item name="colorOnBackground">@color/sarona_white_50</item>
        <item name="colorOnSurface">@color/sarona_white_50</item>
        <item name="colorOnError">@color/sarona_black_900</item>

        <item name="scrimBackground">@color/sarona_black_900_alpha_087</item>
        <item name="android:statusBarColor">@color/sarona_black_900_alpha_060</item>

        <item name="elevationOverlayEnabled">true</item>

        <!--System/Platform attributes-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

</resources>