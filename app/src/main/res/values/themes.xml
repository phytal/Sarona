<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Final, top-level theme-->
    <style name="Theme.Sarona.DayNight" parent="Theme.Sarona"/>

    <style name="Theme.Sarona" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Color-->
        <item name="colorPrimary">@color/sarona_blue_500</item>
        <item name="colorPrimaryVariant">@color/sarona_blue_600</item>
        <item name="colorSecondary">@color/sarona_orange_500</item>
        <item name="colorSecondaryVariant">@color/sarona_orange_400</item>

        <item name="android:colorBackground">@color/sarona_white_200</item>
        <item name="colorSurface">@color/sarona_white_50</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/sarona_red_400</item>

        <item name="colorOnPrimary">@color/sarona_white_50</item>
        <item name="colorOnSecondary">@color/sarona_black_900</item>
        <item name="colorOnBackground">@color/sarona_black_900</item>
        <item name="colorOnSurface">@color/sarona_black_900</item>
        <item name="colorOnError">@color/sarona_black_900</item>

        <item name="scrimBackground">@color/sarona_white_50_alpha_060</item>
        <item name="android:statusBarColor">@color/sarona_blue_50_alpha_060</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Reply.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Reply.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Reply.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Sarona.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Sarona.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Sarona.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Sarona.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Sarona.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Sarona.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Sarona.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Sarona.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Sarona.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Sarona.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Sarona.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Sarona.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--Styles-->
        <item name="bottomAppBarStyle">@style/Widget.Sarona.BottomAppBarStyle</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="navigationViewStyle">@style/Widget.Sarona.NavigationView</item>
        <item name="buttonStyle">@style/Widget.Sarona.Button</item>
        <item name="android:textViewStyle">@style/Widget.Sarona.TextView</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="Theme.Launch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>