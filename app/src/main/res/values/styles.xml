<resources>
    <!--Components-->

    <style name="Widget.Sarona.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <!--Remove any scrim insets applied by NavigationView for system bars-->
        <item name="insetForeground">@android:color/transparent</item>
        <!--Set the background color of NavigationView-->
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
        <item name="itemTextColor">@color/color_on_surface_emphasis_medium</item>
        <item name="itemIconTint">@color/color_on_surface_emphasis_medium</item>
    </style>

    <style name="Widget.Sarona.BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Sarona.BottomAppBar</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
    </style>

    <style name="ThemeOverlay.Sarona.BottomAppBar" parent="">
        <item name="colorPrimary">@color/sarona_white_50</item>
        <item name="colorOnPrimary">@color/sarona_black_800</item>
    </style>

    <style name="Widget.Sarona.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Sarona.TextInputLayout.HintText</item>
        <item name="android:fontFamily">@font/mplus</item>
        <item name="hintTextColor">?android:colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">?android:colorPrimary</item>
    </style>

    <style name="TextAppearance.Sarona.TextInputLayout.HintText" parent="TextAppearance.Sarona.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/mplus</item>
    </style>

    <style name="Widget.Sarona.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/mplus</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Sarona.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Sarona.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/mplus</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/assignment_dialog_bg</item>
    </style>
</resources>
